        font-size: 2.5rem;
    }

    .hero-description {
        font-size: 1.1rem;
        max-width: 100%;
    }

    .btn-modern {
        font-size: 1rem;
        padding: 0.8rem 2rem;
    }

    .feature-card {
        padding: 2rem;
    }

